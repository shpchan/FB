@{
    ViewBag.Title = "tool_type";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-12 lr-form-item" style="padding:0;line-height:38px;text-align:center;font-size:20px;font-weight:bold;color:#333;" >
        <span></span>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_tooltype_info" >
        <div class="lr-form-item-title">类型编号<font face="宋体">*</font></div>
        <input id="tooltype_id" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_tooltype_info" >
        <div class="lr-form-item-title">类型名称<font face="宋体">*</font></div>
        <input id="tooltype_name" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_tooltype_info" >
        <div class="lr-form-item-title">前缀<font face="宋体">*</font></div>
        <input id="short_name" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_tooltype_info" >
        <div class="lr-form-item-title">上级类型</div>
        <div id="parent_id" isvalid="yes"></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/ToolType/Form.js")

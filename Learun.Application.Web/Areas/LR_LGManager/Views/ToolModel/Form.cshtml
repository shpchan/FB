@{
    ViewBag.Title = "tool_model";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-12 lr-form-item" style="padding:0;line-height:38px;text-align:center;font-size:20px;font-weight:bold;color:#333;" >
        <span></span>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolmodel_info" >
        <div class="lr-form-item-title">刀具名称<font face="宋体">*</font></div>
        <input id="toolmodel_name" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolmodel_info" >
        <div class="lr-form-item-title">刀具编号<font face="宋体">*</font></div>
        <input id="toolmodel_id" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolmodel_info" >
        <div class="lr-form-item-title">前缀<font face="宋体">*</font></div>
        <input id="short_name" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolmodel_info" >
        <div class="lr-form-item-title">计数方式</div>
        <input id="count_type" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolmodel_info" >
        <div class="lr-form-item-title">初始寿命</div>
        <input id="initial_life" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolmodel_info" >
        <div class="lr-form-item-title">预警值</div>
        <input id="life_prediction" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolmodel_info" >
        <div class="lr-form-item-title">选择类型<font face="宋体">*</font></div>
        <div id="tooltype_id" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/ToolModel/Form.js")

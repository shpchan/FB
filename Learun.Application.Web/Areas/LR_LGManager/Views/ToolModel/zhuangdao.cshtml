@{
    ViewBag.Title = "刀具寿命管理";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-12 lr-form-item" style="padding:0;line-height:38px;text-align:center;font-size:20px;font-weight:bold;color:#333;">
        <span></span>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="tb_toolmodel_info">
        <div class="lr-form-item-title">刀具编号<font face="宋体">*</font></div>
        <input id="toolmodel_id" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" disabled="disabled"/>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="tb_toolmodel_info">
        <div class="lr-form-item-title">设备编号<font face="宋体">*</font></div>
        @*<input id="machine_id" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />*@
        <select id="machine_id" type="text" class="form-control" isvalid="yes" checkexpession="NotNull">
            @foreach (SiteJnrs.Models.DeviceLineNum dln in ViewData["ListDeviceNum"] as List  <SiteJnrs.Models.DeviceLineNum>)
                        {
                            <option value="@dln.group_id">@dln.group_name</option>
                        }
        </select>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="tb_toolmodel_info">
        <div class="lr-form-item-title">组号<font face="宋体">*</font></div>
        @*<input id="tool_grp" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />*@
        <select id="tool_grp" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" ></select>
    </div>
    <div class="col-xs-6 lr-form-item" data-table="tb_toolmodel_info">
        <div class="lr-form-item-title">刀位<font face="宋体">*</font></div>
        @*<input id="tool_pos" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />*@
        <select id="tool_pos" type="text" class="form-control" isvalid="yes" checkexpession="NotNull"></select>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/ToolModel/zhuangdao.js")

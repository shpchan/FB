@{
    ViewBag.Title = "刀具寿命管理";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-12 lr-form-item" style="padding:0;line-height:38px;text-align:center;font-size:20px;font-weight:bold;color:#333;" >
        <span></span>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_mac_tool_history" >
        <div class="lr-form-item-title">刀具编号<font face="宋体">*</font></div>
        <input id="tool_no" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_mac_tool_history" >
        <div class="lr-form-item-title">设备编号<font face="宋体">*</font></div>
        <input id="machine_id" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_mac_tool_history" >
        <div class="lr-form-item-title">长度补偿<font face="宋体">*</font></div>
        <input id="len_offset" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_mac_tool_history" >
        <div class="lr-form-item-title">长度磨损补偿<font face="宋体">*</font></div>
        <input id="len_wear_compensate" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_mac_tool_history" >
        <div class="lr-form-item-title">直径补偿<font face="宋体">*</font></div>
        <input id="diameter_compensate" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_mac_tool_history" >
        <div class="lr-form-item-title">直径磨损补偿<font face="宋体">*</font></div>
        <input id="diameter_wear_compensate" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_mac_tool_history" >
        <div class="lr-form-item-title">初始寿命<font face="宋体">*</font></div>
        <input id="initial_life" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_mac_tool_history" >
        <div class="lr-form-item-title">预计寿命<font face="宋体">*</font></div>
        <input id="life_prediction" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_mac_tool_history" >
        <div class="lr-form-item-title">总寿命<font face="宋体">*</font></div>
        <input id="tool_life" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_mac_tool_history" >
        <div class="lr-form-item-title">采集日期<font face="宋体">*</font></div>
        <input id="read_time" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#read_time').trigger('change'); } })"  isvalid="yes" checkexpession="NotNull" />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/tool_history/Form.js")

@{
    ViewBag.Title = "stock_info";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="lr-layout "  >
    <div class="lr-layout-center">
        <div class="lr-layout-wrap lr-layout-wrap-notitle ">
            <div class="lr-layout-tool">
                <div class="lr-layout-tool-left">
                    <div class="lr-layout-tool-item">
                        <div id="datesearch"></div>
                    </div>
                    <div class="lr-layout-tool-item">
                        <div id="multiple_condition_query">
                            <div class="lr-query-formcontent">
                                <div class="col-xs-6 lr-form-item">
                                    <div class="lr-form-item-title">平台名称</div>
                                    <input id="platform_name" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-6 lr-form-item">
                                    <div class="lr-form-item-title">单元名称</div>
                                    <input id="unit_name" type="text" class="form-control" />
                                </div>
                                <div class="col-xs-6 lr-form-item">
                                    <div class="lr-form-item-title">零件编码</div>
                                    <input id="element_id" type="text" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="lr-layout-tool-right">
                    <div class=" btn-group btn-group-sm">
                        <a id="lr_refresh" class="btn btn-default"><i class="fa fa-refresh"></i></a>
                    </div>
                    <div class=" btn-group btn-group-sm" learun-authorize="yes">
                        <a id="lr_read" class="btn btn-default"><i class="fa fa-pencil-square-o"></i>&nbsp;查看详情</a>
                        <a id="lr_agree" class="btn btn-default"><i class="fa fa-money"></i>&nbsp;通过审核</a>
                        <a id="lr_disagree" class="btn btn-default"><i class="fa fa-hand-paper-o"></i>&nbsp;驳回审核</a>
                    </div>
                </div>
            </div>
            <div class="lr-layout-body" id="gridtable"></div>
        </div>
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/stock_info_check/Index.js")

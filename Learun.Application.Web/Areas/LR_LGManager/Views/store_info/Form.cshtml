@{
    ViewBag.Title = "仓库即时库存";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">物料代码<font face="宋体">*</font></div>
        <input id="materiel_id" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">供应商</div>
        <input id="supplier" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">仓库代码</div>
        <input id="store_id" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">仓库名称</div>
        <input id="store_name" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">仓位代码</div>
        <input id="storepos_id" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">仓位名称</div>
        <input id="storepos_name" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">生产/采购日期</div>
        <input id="buy_time" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#buy_time').trigger('change'); } })"   />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">保质期</div>
        <input id="quality_period" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">到期日</div>
        <input id="due_date" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#due_date').trigger('change'); } })"   />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">基本计量单位</div>
        <input id="baseunit" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">基本单位数量</div>
        <input id="baseunit_num" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">常用计量单位</div>
        <input id="comunit" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">常用单位数量</div>
        <input id="comunit_num" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">辅助计量单位</div>
        <input id="assistunit" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">换算率</div>
        <input id="changenum" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_store_info" >
        <div class="lr-form-item-title">辅助单位数量</div>
        <input id="assistunit_num" type="text" class="form-control" isvalid="yes" checkexpession="NumOrNull" />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/store_info/Form.js")

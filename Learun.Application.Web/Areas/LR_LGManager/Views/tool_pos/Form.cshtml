@{
    ViewBag.Title = "设备刀位配置";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-12 lr-form-item" style="padding:0;line-height:38px;text-align:center;font-size:20px;font-weight:bold;color:#333;" >
        <span></span>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolpos_info" >
        <div class="lr-form-item-title">刀位编号<font face="宋体">*</font></div>
        <input id="toolpos_id" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolpos_info" >
        <div class="lr-form-item-title">刀位名称</div>
        <input id="toolpos_name" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolpos_info" >
        <div class="lr-form-item-title">所属设备<font face="宋体">*</font></div>
        <div id="machine_id" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolpos_info" >
        <div class="lr-form-item-title">创建日期<font face="宋体">*</font></div>
        <input id="create_time" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm',onpicked: function () { $('#create_time').trigger('change'); } })"  isvalid="yes" checkexpession="NotNull" />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/tool_pos/Form.js")

@{
    ViewBag.Title = "装/卸刀记录";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-12 lr-form-item" style="padding:0;line-height:38px;text-align:center;font-size:20px;font-weight:bold;color:#333;" >
        <span></span>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolinstall_record" >
        <div class="lr-form-item-title">刀具编号<font face="宋体">*</font></div>
        <input id="tool_no" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolinstall_record" >
        <div class="lr-form-item-title">设备编号</div>
        <div id="machine_id"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolinstall_record" >
        <div class="lr-form-item-title">装/卸刀</div>
        <input id="action" type="text" class="form-control"  />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="tb_toolinstall_record" >
        <div class="lr-form-item-title">操作日期</div>
        <input id="record_time" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm',onpicked: function () { $('#record_time').trigger('change'); } })"   />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/toolinstall_record/Form.js")

@{
    ViewBag.Title = "班次人员登录";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-12 lr-form-item" style="padding:0;line-height:38px;text-align:center;font-size:20px;font-weight:bold;color:#333;" >
        <span></span>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_employee_access" >
        <div class="lr-form-item-title">选择设备组<font face="宋体">*</font></div>
        <div id="machine_id" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_employee_access" >
        <div class="lr-form-item-title">选择人员<font face="宋体">*</font></div>
        <div id="employee_id" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_employee_access" >
        <div class="lr-form-item-title">选择班次<font face="宋体">*</font></div>
        <div id="account_id" isvalid="yes" checkexpession="NotNull" ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_employee_access" >
        <div class="lr-form-item-title">提交日期<font face="宋体">*</font></div>
        <input id="last_time" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm',onpicked: function () { $('#last_time').trigger('change'); } })"  isvalid="yes" checkexpession="NotNull" />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/EmployeeAccess/Form.js")

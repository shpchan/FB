@{
    ViewBag.Title = "toolblade_info";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolblade_info" >
        <div class="lr-form-item-title">刀片编号<font face="宋体">*</font></div>
        <input id="toolblade_id" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolblade_info" >
        <div class="lr-form-item-title">刀片类型</div>
        <input id="toolblade_type" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolblade_info" >
        <div class="lr-form-item-title">生产厂家</div>
        <input id="tool_cj" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolblade_info" >
        <div class="lr-form-item-title">创建人</div>
        <div id="create_man"  ></div>
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_toolblade_info" >
        <div class="lr-form-item-title">创建日期</div>
        <input id="create_time" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd',onpicked: function () { $('#create_time').trigger('change'); } })"   />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/toolblade_info/Form.js")

    ViewBag.Title = "标准化BOM备份";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-6 lr-form-item"  data-table="tb_stock_info_bak" >
        <div class="lr-form-item-title">展开ID<font face="宋体">*</font></div>
        <input id="open_id" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_stock_info_bak" >

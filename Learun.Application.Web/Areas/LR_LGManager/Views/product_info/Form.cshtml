@{
    ViewBag.Title = "产品信息维护";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<div class="lr-form-wrap">
    <div class="col-xs-12 lr-form-item" style="padding:0;line-height:38px;text-align:center;font-size:20px;font-weight:bold;color:#333;" >
        <span></span>
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="tb_product_info" >
        <div class="lr-form-item-title">编码<font face="宋体">*</font></div>
        <input id="product_id" type="text" class="form-control" isvalid="yes" checkexpession="Num" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_product_info" >
        <div class="lr-form-item-title">产品编号</div>
        <input id="product_no" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_product_info" >
        <div class="lr-form-item-title">产品名称<font face="宋体">*</font></div>
        <input id="product_name" type="text" class="form-control" isvalid="yes" checkexpession="NotNull" />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_product_info" >
        <div class="lr-form-item-title">客户编号</div>
        <input id="custom_no" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_product_info" >
        <div class="lr-form-item-title">客户名称</div>
        <input id="custom_name" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_product_info" >
        <div class="lr-form-item-title">产品类型</div>
        <input id="product_type" type="text" class="form-control"  />
    </div>
    <div class="col-xs-6 lr-form-item"  data-table="tb_product_info" >
        <div class="lr-form-item-title">二维码</div>
        <input id="product_ecode" type="text" class="form-control"  />
    </div>
    <div class="col-xs-12 lr-form-item"  data-table="tb_product_info" >
        <div class="lr-form-item-title">创建日期</div>
        <input id="create_time" type="text" class="form-control lr-input-wdatepicker" onfocus="WdatePicker({ dateFmt:'yyyy-MM-dd HH:mm',onpicked: function () { $('#create_time').trigger('change'); } })"   />
    </div>
</div>
@Html.AppendJsFile("/Areas/LR_LGManager/Views/product_info/Form.js")
